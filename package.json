{
	"name": "typedoc-plugin-hot-dev",
	"version": "0.0.7",
	"description": "Provides a Typedoc hot theme development environment",
	"main": "./dist/index.js",
	"scripts": {
		"docs": "typedoc",
		"build": "tsc",
		"test": "nyc mocha"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/citkane/typedoc-plugin-hot-dev.git"
	},
	"keywords": [
		"typedoc",
		"plugin",
		"typedoc-plugin",
		"theme",
		"development",
		"hot"
	],
	"author": "Michael Jonker",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/citkane/typedoc-plugin-hot-dev/issues"
	},
	"homepage": "https://github.com/citkane/typedoc-plugin-hot-dev#readme",
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=16.0.0"
	},
	"bin": {
		"hot-dev": "./dist/bin/hot.js"
	},
	"dependencies": {
		"browser-sync": "^2.27.10",
		"chokidar": "^3.5.3",
		"fs-extra": "^10.1.0",
		"yargs": "^17.5.1"
	},
	"devDependencies": {
		"@types/browser-sync": "^2.26.3",
		"@types/chai": "^4.3.1",
		"@types/fs-extra": "^9.0.13",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.0.5",
		"@types/sinon": "^10.0.12",
		"@types/wtfnode": "^0.7.0",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.30.6",
		"chai": "^4.3.6",
		"eslint": "^8.20.0",
		"mocha": "^10.0.0",
		"nyc": "^15.1.0",
		"sinon": "^14.0.0",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.1",
		"typedoc": "^0.23.9",
		"typescript": "^4.7.4"
	},
	"peerDependencies": {
		"typedoc": "^0.23"
	},
	"mocha": {
		"extension": [
			"ts"
		],
		"file": "./test/index.spec.ts",
		"require": [
			"ts-node/register/transpile-only",
			"source-map-support/register",
			"./test/hooks.ts"
		],
		"exit": true
	},
	"nyc": {
		"extension": [
			".ts",
			".tsx"
		],
		"include": [
			"src/**/*.ts"
		],
		"reporter": [
			"html",
			"text"
		],
		"all": true,
		"report-dir": "./test/coverage",
		"temp-dir": "./test/.nyc_output"
	}
}
